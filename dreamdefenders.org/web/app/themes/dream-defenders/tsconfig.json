{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "target": "es5",
        "downlevelIteration": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "awesomeTypescriptLoaderOptions": {
      "silent": true
    },
    "exclude": [
        "assets/js/vendor",
        "node_modules",
        "webpack.config.js"
    ]
}
