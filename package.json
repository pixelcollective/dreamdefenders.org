{
  "name": "dreamdefenders",
  "private": true,
  "workspaces": [
    "web/app/plugins/blocks",
    "web/app/themes/dreamdefenders-theme"
  ],
  "scripts": {
    "build:theme": "yarn workspace theme build",
    "build:blocks": "yarn workspace blocks build",
    "build": "concurrently --kill-others-on-fail \"yarn build:theme\"  \"yarn build:blocks\"",
    "start:theme": "yarn workspace theme start",
    "start:blocks": "yarn workspace blocks build",
    "start": "concurrently --kill-others-on-fail \"yarn start:theme\" \"yarn start:blocks\"",
    "cypress:open": "cypress open",
    "cypress:development": "cypress run --spec 'tests/cypress/integration/development.js' --browser chrome",
    "cypress:staging": "cypress run --spec 'tests/cypress/integration/staging.js' --browser chrome",
    "cypress:production": "cypress run --spec 'tests/cypress/integration/production.js' --browser chrome"
  },
  "devDependencies": {
    "@percy/cypress": "^2.2.0",
    "concurrently": "^5.0.2",
    "cypress-slack-reporter": "^0.5.0",
    "postcss-import-ext-glob": "^1.1.0"
  }
}